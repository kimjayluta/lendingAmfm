<!--Modal Approve-->
<div class="modal fade" id="approve" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h6>Are you sure to approve this client ?</h6>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-outline-primary">Approve</button>
            </div>
        </div>
    </div>
</div>

<!--Modal Decline-->
<div class="modal fade" id="decline" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h6>Are you sure to decline this client ?</h6>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-outline-danger">Decline</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
	//         Initialize the dataTable functionality
	var table = $('#dataTable').DataTable({
		"processing": true,
		"serverSide": true,
		"ajax": {
			url :"/",
			type: "POST"
		},
		"columnDefs": [{
			"orderable":false,
			"targets": -1,
            "data": null,
            "defaultContent":
                "<button class='mr-1 approve btn btn-outline-primary' data-toggle='modal' data-target='#approve'>Approve</button>"+
                "<button class='mr-1 decline btn btn-danger' data-toggle='modal' data-target='#approve'>Decline</button>"
		}],
		language: {
			paginate: {
				previous: "&#171;",
				next: "&#187;"
			}
		}
	});

	// When the approve button is clicked
	$('#dataTable tbody').on( 'click', 'button.approve', function () {
		var data = table.row( $(this).parents('tr') ).data();
		alert( data[0] +"'s salary is: "+ data[ 0 ] );
	} );

	// When the decline button is clicked
	$('#dataTable tbody').on( 'click', 'button.decline', function () {
		var data = table.row( $(this).parents('tr') ).data();
		alert( data[0] +"'s salary is: "+ data[ 0 ] );
	} );


</script>